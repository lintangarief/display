<div class="content-dashboard">
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <label class="label-select-outlet" for="select-outlet">Select Outlet : </label>
        <select class="form-control" id="select-outlet">
          <option selected="selected" class="select-default">Outlet 1</option>
          <option>Outlet 2</option>
          <option>Outlet 3</option>
          <option>Outlet 4</option>
        </select>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">OUTLET NAME</div>
        <div class="panel-body">
          <div class="col-sm-3">
            <ul class="list-group">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Total Screen
                <span class="badge badge-primary badge-pill">3</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Total Active Screen
                <span class="badge badge-primary badge-pill">0</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Total Playlist
                <span class="badge badge-primary badge-pill"><%= @total_playlist %></span>
              </li>
            </ul>
          </div>
          <div class="col-sm-9">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>DISPLAY</th>
                    <th>STATUS</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>John</td>
                    <td><span class="badge badge-primary badge-pill">ONLINE</span></td>
                  </tr>
                  <tr>
                    <td>Mary</td>
                    <td><span class="badge badge-primary badge-pill">OFFLINE</span></td>
                  </tr>
                  <tr>
                    <td>July</td>
                    <td><span class="badge badge-primary badge-pill">ONLINE</span></td>
                  </tr>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">TOTAL OUTLET</div>
        <div class="panel-body panel-body-total">20</div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">TOTAL SCREEN</div>
        <div class="panel-body panel-body-total">15</div>
      </div>
    </div>
  </div>
</div>
