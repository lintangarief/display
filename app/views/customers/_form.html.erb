<div>
  <%= form_for(@customer, :html => { :multipart => true }) do |f| %>
    <div class="form-group row">
      <h3 class="title-new-playlist">New Customer</h3>
    </div>
    <hr>
    <div class="form-group row">
      <div class="form-group col-md-6">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control", placeholder: "Customer Name" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-group col-md-6">
        <%= f.label :phone_number %><br>
        <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone Number" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-group col-md-6">
        <%= f.label :email %><br>
        <%= f.text_field :email, class: "form-control", placeholder: "Customer Email" %>
      </div>
    </div>
    <%= f.submit class: "btn btn-primary pull-left" %>
  <% end %>
</div>
