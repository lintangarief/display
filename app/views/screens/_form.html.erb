<div>
  <%= form_for @screen, :as => :post, :url => screens_path, :method => :put, :html => { :class => "edit_class", :id => "edit_post_45" }  do |f| %>
    <div class="form-group row">
      <div class="col-md-6">
        <h3 class="title-new-playlist pull-left">Edit Screen Model</h3>
      </div>
      <div class="col-md-6">
        <%= link_to 'Back to listing', screens_path, class:"pull-right btn btn-primary btn-back" %>
      </div>
    </div>
    <hr>
    <div class="form-group row">
      <div class="form-group col-md-6">
        <%= f.label :mode, "Screen Model" %>
        <br>
        <%= f.select :mode, [["POTRAIT",1],["LANDSCAPE",2]], {}, {id:"mode", class:"form-control"} %>
      </div>
    </div>
    <%= f.submit class: "btn btn-primary pull-left" %>
  <% end %>
</div>
